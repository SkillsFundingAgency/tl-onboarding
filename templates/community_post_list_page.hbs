                                <script>
                                  $.getJSON('/api/v2/community/posts/{{id}}.json', function(title) {
                                      $('.{{id}}post').html(title.post.details.replace(/(<([^>]+)>)/gi, "").replace("&nbsp;", " ").substring(0, 75) + '...');
                                  });
                                </script>
                                <div class="{{id}}post govuk-!-margin-top-0 tl-community-table-post--description">
