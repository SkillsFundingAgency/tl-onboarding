<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner">
        <p class="govuk-phase-banner__content">
            <a href="https://www.smartsurvey.co.uk/s/XXECG8/" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service – <a class="govuk-link" href="https://www.smartsurvey.co.uk/s/XXECG8/" id="tl-header--feedback-link">help us to improve it</a>
            </span>
        </p>
    </div>
</div>
<div class="govuk-width-container" id="tl-breadcrumbs--help">
    <div class="tl-breadcrumbs">
        {{breadcrumbs}}
    </div>
</div>



<!-- Main content -->
<main id="main-content" role="main">
    <!-- Article Content -->
    <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">{{section.name}}</h1>
                {{#if section.description}}
                <p class="govuk-body-l">{{section.description}}</p>
                {{/if}}
                <section>
                    <ul class="govuk-list">
                        {{#if section.articles}}

                        {{#each section.articles}}
                        <li>
                            <a class="govuk-link govuk-!-margin-bottom-1" href="{{url}}">{{title}}</a>
                        </li>
                        {{/each}}
                        {{else}}
                        <li>
                            <p class="govuk-body">There's nothing here at the moment</p>
                        </li>

                        {{/if}}
                    </ul>

                </section>
            </div>

            <div class="govuk-grid-column-one-third">
                {{#if signed_in}}
                {{#if settings.show_follow_article}}
                <div class="article-subscribe tl-article--subscribe--signedin">
                    <button id="follow-btn" type="button" class="tl-hidden">Follow </button>
                </div>
                {{/if}}
                {{else}}
                {{#if settings.show_follow_article}}
                <div class="article-subscribe tl-article--subscribe">{{subscribe}}</div>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</main>