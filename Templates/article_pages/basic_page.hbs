<div class="govuk-width-container ">
    <!-- Alpha banner -->
    <div class="govuk-phase-banner">
        <p class="govuk-phase-banner__content">
            <strong class="govuk-tag govuk-phase-banner__content__tag">
                alpha
            </strong>
            <span class="govuk-phase-banner__text">
                This is a new service – your <a class="govuk-link" href="#">feedback</a> will help us to improve it.
            </span>
        </p>
    </div>
</div>

<div class="govuk-width-container">
    <div class="tl-breadcrumbs" id="tl-breadcrumbs--article">
        {{breadcrumbs}}
    </div>
</div>

<!-- Main content -->
<main id="main-content" role="main">
    <!-- Article Content -->
    <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">{{article.title}}</h1>

                <div class="tl-article--content">{{article.body}}</div>


                <p class="govuk-body-s tl-article--date">
                    {{#is article.created_at article.edited_at}}
                    Created {{date article.created_at}}
                    {{else}}
                    Last updated {{date article.edited_at}}
                    {{/is}}
                </p>



            </div>
        </div>



    </div>

</main>
