<script type="text/javascript">
    if (window.location.href.indexOf("eturn_to=%2Fhc%2Frequests") > -1) {
        window.location.href = "/hc/en-gb/articles/{{settings.article_id_confirmation}}";
    }
</script>

<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner tl-phase-banner--home">
        <p class="govuk-phase-banner__content">
            <a href="{{settings.survey_link}}" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service - <a class="govuk-link" href="{{settings.survey_link}}" id="tl-header--feedback">help us to improve it</a>
            </span>
        </p>
    </div>
</div>

<!-- Main content -->
<main id="main-content" role="main">
    <!-- Hero Banner -->
    <div class="tl-hero">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl govuk-!-margin-bottom-7">Support with delivering T Levels</h1>
                    <label class="tl-inlineblock govuk-body govuk-!-font-size-24 govuk-!-margin-bottom-5" for="query">
                        Help, guidance and support materials for colleges, schools and other T Level providers
                    </label>
                    <div class="tl-form-group tl-search--container tl-search--home" id="tl-search--home">

                        <div class="tl-search--error tl-hidden">
                            <span class="tl-error--message"></span>
                        </div>
                        {{search placeholder="Search for support" submit=true instant=settings.instant_search class='tl-search govuk-!-margin-top-2'}}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Lower Content -->
    <div class="govuk-width-container govuk-main-wrapper">
        <div class="tl-home--categories">

            {{#each categories}}
            {{#is name "How this site works"}}
            {{else}}
            <div class="tl-home--category">
                <h3 class="govuk-heading-m"><a href="{{url}}" class="govuk-link" GTMname="{{name}}">{{name}}</a></h3>
                <p class="govuk-body">{{excerpt description}}</p>
            </div>
            {{/is}}
            {{/each}}


        </div>
        <div class="govuk-grid-row">


            {{#if help_center.community_enabled}}
            <div class="govuk-grid-column-one-half">
                <div class="tl-card">
                    <h3 class="govuk-heading-m">Discussion forum</h3>
                    <p class="govuk-body">
                        Use the community discussion forum to:
                    </p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>get answers to your T Level queries</li>
                        <li>talk about delivering T Levels with people from other colleges and schools</li>
                    </ul>
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        {{#link 'posts' class='govuk-button tl-home--forum govuk-!-margin-bottom-0' }}
                        Go to the forum
                        {{/link}}

                    </p>

                </div>
            </div>
            {{/if}}

            <div class="govuk-grid-column-one-half">
                <div class="tl-card tl-js-hidden" id="tl-home--ticket">
                    <h3 class="govuk-heading-m">Contact us</h3>
                    <p class="govuk-body">
                        Get in touch with the Education and Skills Funding Agency (ESFA) directly if you have:
                    </p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>questions about T Levels marketing or events</li>
                        <li>general feedback or suggestions for how we can improve</li>
                    </ul>
                    <p class="govuk-body govuk-!-margin-bottom-0">
                        {{#link 'new_request' ticket_form_id='360001454080' class='govuk-button tl-home--contact govuk-!-margin-bottom-0' }}
                        Send a message
                        {{/link}}

                    </p>

                </div>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    if (!isAgent()) {
                        $("#tl-home--ticket").show();
                    }
                });
            </script>
        </div>


        </div>
</main>
