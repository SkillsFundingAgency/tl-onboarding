<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner tl-phase-banner--home">
        <p class="govuk-phase-banner__content">
            <a href="{{settings.survey_link}}" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service - <a class="govuk-link" href="{{settings.survey_link}}" id="tl-header--feedback-link">help us to improve it</a>
            </span>
        </p>
    </div>
</div>


<!-- Main content -->
<main id="main-content" role="main">
    <!-- Search Hero -->
    <div class="tl-hero tl-hero--minimal">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-half">

                    <div id="tl-breadcrumbs--category">
                        <div class="tl-breadcrumbs">
                            {{breadcrumbs}}
                        </div>
                    </div>
                </div>
                <div class="govuk-grid-column-one-half tl-text--right govuk-!-margin-top-1">
                    <div class="tl-form-group tl-search--container tl-search--home tl-search--home--minimal" id="tl-search--category">

                        <div class="tl-search--error tl-hidden">
                            <span class="tl-error--message"></span>
                        </div>
                        <form role="search" class="tl-search" data-search="" action="/hc/en-gb/search" accept-charset="UTF-8" method="get">
                            <input name="utf8" type="hidden" value="✓"><input type="search" name="query" id="query" placeholder="Search for support" aria-label="Search for support">
                            <input type="hidden" name="filter_by" value="knowledge_base" />
                            <input type="submit" name="commit" value="Search">
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendar -->

    <section id="tl-calendar">
        <div class="accordion-header govuk-!-margin-bottom-6 govuk-!-margin-top-9">
            <h2 class="govuk-heading-m govuk-!-margin-bottom-2">{{settings.tl_calendar_title}}</h2>
            <a href="#" class="govuk-link" data-accordion-link="fe-fd-calendar"><span data-accordion-state>Hide</span> <span class="lower-case">{{settings.tl_calendar_title}}</span></a>
        </div>
        <div class="section-body" data-accordion-body="tl-calendar">
            <div class="spinner" data-calendar-state="loading">
                <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">Loading <span class="lower-case">{{settings.tl_calendar_title}}</span>&hellip;</p>
                <div class="spinner__animation"></div>
            </div>
            <p class="govuk-body" data-calendar-state="error">{{settings.tl_calendar_title}} could not be loaded at this time. Please try again later.</p>
            <div class="govuk-grid-row event-wrapper" data-calendar-state="loaded">
                <div class="govuk-grid-column-one-third">
                    <div id="events-calendar" data-set-min-height="events-calendar"></div>
                </div>
                <div class="govuk-grid-column-two-thirds">
                    <div class="event-list">
                        <p class="govuk-body" data-no-dates>There are no <span class="lower-case">{{settings.tl_calendar_title}}</span> to display.</p>
                        <div data-dates data-set-min-height="calendar">
                            <div class="feature-panels__panel feature-panels__panel--front-door feature-panels__panel--full" data-date-template>
                                <div class="feature-panels__panel__inner">
                                    <span class="govuk-caption-m govuk-!-font-size-16 govuk-!-margin-bottom-1" data-date-date></span>
                                    <h3 class="govuk-heading-s govuk-!-margin-bottom-2" data-date-title></h3>
                                    <div class="event-description-wrapper" data-date-description-wrapper>
                                        <p class="govuk-body govuk-!-margin-right-4 event-description" data-date-description></p>
                                        <a class="govuk-link govuk-!-margin-bottom-4 event-description-toggle" href="#" data-date-description-toggle>
                                            <span class="event-description-toggle__more">Show more</span>
                                            <span class="event-description-toggle__less">Show less</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <ul class="event-pagination govuk-!-margin-top-6" data-event-pagination>
                            <li class="event-pagination__item">
                                <a class="govuk-link govuk-!-font-size-19" data-event-pagination-direction="previous" href="#"><svg class="govuk-!-margin-right-1" width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 9L5 5L9 1" stroke="#1D70B8" /><path d="M5 9L1 5L5 1" stroke="#1D70B8" /></svg>Previous</a>
                            </li>
                            <li class="event-pagination__item">
                                <a class="govuk-link govuk-!-font-size-19" data-event-pagination-direction="next" href="#">Next<svg class="govuk-!-margin-left-1" width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1L5 5L0.999999 9" stroke="#1D70B8" /><path d="M5 1L9 5L5 9" stroke="#1D70B8" /></svg></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Article Content -->
    <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">{{category.name}}</h1>
                {{#if category.description}}
                <p class="govuk-body-l">{{category.description}}</p>
                {{/if}}
                <section>
                    {{#each sections}}
                    <h2 class="govuk-heading-m">{{name}}</h2>
                    {{#is name "Newsletters"}}
                    {{#if articles}}
                    <ul class="govuk-list tl-newsletter--list">
                        {{#each articles}}
                        <li>
                            <a class="govuk-link tl-category--article" href="{{url}}">{{title}}</a>
                        </li>
                        {{/each}}
                        <li class="govuk-!-margin-top-4">
                            {{#if more_articles}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-body tl-category--more">
                                See all newsletters
                            </a>
                            {{/if}}
                            {{#is article_count 5}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-body tl-category--more">
                                See all newsletters
                            </a>
                            {{/is}}
                            {{#is article_count 6}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-body tl-category--more">
                                See all newsletters
                            </a>
                            {{/is}}
                        </li>
                    </ul>
                    {{else}}
                    <ul class="govuk-list">
                        <li>
                            <p class="govuk-body">There's nothing here at the moment</p>
                        </li>
                    </ul>
                    {{/if}}
                    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-8 govuk-!-margin-bottom-7">
                    {{else}}
                    {{#if articles}}
                    <ul class="govuk-list">
                        {{#each articles}}
                        <li>
                            <a class="govuk-link tl-category--article" href="{{url}}">{{title}}</a>
                        </li>
                        {{/each}}
                        {{#if more_articles}}
                        <li class="govuk-!-margin-top-4">
                            <a class="govuk-link govuk-body tl-category--more" href="{{url}}">
                                See all events, webinars and information
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                    {{else}}
                    <ul class="govuk-list">
                        <li>
                            <p class="govuk-body">There's nothing here at the moment</p>
                        </li>
                    </ul>
                    {{/if}}
                    {{/is}}


                    {{/each}}
                </section>

            </div>
            <div class="govuk-grid-column-one-third">

                {{#if signed_in}}
                <div class="article-subscribe tl-article--subscribe--signedin tl-js-visible" id="tl-newsletter--subscribe">
                    <button id="follow-btn" type="button" class="tl-hidden">Follow </button>
                    <script type="text/javascript">
                        const section_id_newsletters = {{settings.section_id_newsletters}}
                    </script>
                </div>
                {{else}}
                <div class="article-subscribe tl-article--subscribe">
                    <button data-auth-action="signin" data-selected="false" aria-expanded="false" aria-haspopup="menu" type="button">
                        Sign in to get news updates
                    </button>
                </div>
                {{/if}}

            </div>
        </div>
    </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  	frontDoor('{{settings.tl_calendar_api_key}}', '{{settings.tl_calendar_data_source}}');
  });
</script>
<script src="{{asset 'tavo-calendar.js'}}"></script>