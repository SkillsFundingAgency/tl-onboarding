<!-- Main content -->
<main id="main-content" role="main">


    <div class="govuk-width-container">
        <div id="tl-breadcrumbs--category">
            <div class="tl-breadcrumbs">
                {{breadcrumbs}}
            </div>
        </div>
    </div>





    <!-- Article Content -->
    <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">{{category.name}}</h1>
            </div>
            <div class="govuk-grid-column-one-third tl-text--right">

                {{#if signed_in}}
                <div class="article-subscribe tl-article--subscribe--signedin tl-js-visible" id="tl-newsletter--subscribe">
                    <button id="follow-btn" type="button" class="tl-hidden">Follow </button>
                    <script type="text/javascript">
                        const section_id_newsletters = {{settings.section_id_newsletters}}
                    </script>
                </div>
                {{else}}
                <div class="article-subscribe tl-article--subscribe">
                    <button data-auth-action="signin" data-selected="false" aria-expanded="false" aria-haspopup="menu" type="button">
                        Sign in to get news updates
                    </button>
                </div>
                {{/if}}

            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <section class="govuk-!-margin-bottom-8">
                    {{#each sections}}
                    {{#is name "Latest news"}}
                    <h2 class="govuk-heading-l">{{name}}</h2>

                    {{#if articles}}
                    <div class="govuk-grid-row">
                        {{#each articles}}
                        {{#is @index 0}}
                        <div class="govuk-grid-column-one-half">
                            <h3 class="govuk-heading-m govuk-!-margin-bottom-2"><a href="{{url}}" class="govuk-link">{{title}}</a></h3>
                            <p class="govuk-body-s">{{date created_at class='metadata' format='medium'}}</p>
                            <p class="govuk-body">{{excerpt body characters=150}}</p>
                        </div>
                        {{/is}}
                        {{#is @index 1}}
                        <div class="govuk-grid-column-one-half">
                            <h3 class="govuk-heading-m govuk-!-margin-bottom-2"><a href="{{url}}" class="govuk-link">{{title}}</a></h3>
                            <p class="govuk-body-s">{{date created_at class='metadata' format='medium'}}</p>
                            <p class="govuk-body">{{excerpt body characters=150}}</p>
                        </div>
                        {{/is}}
                        {{/each}}
                    </div>
                    <div class="govuk-grid-row">
                        <div class="govuk-grid-column-two-thirds">
                            <h2 class="govuk-heading-m govuk-!-margin-top-8">Past news stories</h2>


                            <ul class="govuk-list tl-newsletter--list">
                                {{#each articles}}
                                {{#is @index 0}}
                                {{else}}
                                {{#is @index 1}}
                                {{else}}
                                <li>
                                    <a class="govuk-link tl-category--article" href="{{url}}">{{title}}</a>
                                </li>
                                {{/is}}
                                {{/is}}
                                {{/each}}


                            </ul>
                            {{#if more_articles}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-!-margin-top-4 govuk-body tl-category--more">
                                See news archive
                            </a>
                            {{/if}}
                        </div>
                    </div>
                    {{/if}}
                    {{/is}}
                    {{/each}}
                </section>








                <section>
                    {{#each sections}}
                    {{#is name "Newsletters"}}
                    <h2 class="govuk-heading-m">{{name}}</h2>

                    {{#if articles}}
                    <ul class="govuk-list tl-newsletter--list">
                        {{#each articles}}
                        <li>
                            <a class="govuk-link tl-category--article" href="{{url}}">{{title}}</a>
                        </li>
                        {{/each}}
                        <li class="govuk-!-margin-top-4">
                            {{#if more_articles}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-body tl-category--more">
                                See all newsletters
                            </a>
                            {{/if}}
                            {{#is article_count 5}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-body tl-category--more">
                                See all newsletters
                            </a>
                            {{/is}}
                            {{#is article_count 6}}
                            <a href="{{url}}" class="govuk-link see-all-articles govuk-body tl-category--more">
                                See all newsletters
                            </a>
                            {{/is}}
                        </li>
                    </ul>
                    {{else}}
                    <ul class="govuk-list">
                        <li>
                            <p class="govuk-body">There's nothing here at the moment</p>
                        </li>
                    </ul>
                    {{/if}}
                    <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-8 govuk-!-margin-bottom-7">

                    {{/is}}


                    {{/each}}
                </section>

            </div>

        </div>
    </div>
</main>
