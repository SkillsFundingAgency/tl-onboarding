<div class="govuk-width-container ">
    <!-- Phase banner -->
    <div class="govuk-phase-banner tl-phase-banner">
        <p class="govuk-phase-banner__content">
            <a href="{{settings.survey_link}}" id="tl-header--feedback-button">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    Give feedback
                </strong>
            </a>
            <span class="govuk-phase-banner__text">
                This is a new service - <a class="govuk-link" href="{{settings.survey_link}}" id="tl-header--feedback-link">help us to improve it</a>
            </span>
        </p>
    </div>
</div>


<div class="govuk-width-container">
    <div class="tl-breadcrumbs" id="tl-breadcrumbs--help">
        {{breadcrumbs}}
    </div>
</div>

<!-- Main content -->
<main id="main-content" role="main">
       <div class="govuk-width-container govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">Contact us</h1>
                <p class="govuk-body">Use this form to send a message to the Education and Skills Funding Agency (ESFA) about T Levels. You can usually expect a reply within 2 working days. </p>
                <p class="govuk-body">Before you send a question, check to see if it has been answered in the <a href="/community/posts" class="govuk-link">T Level discussion forum</a>.</p>
                <div class="tl-ticket--form">
                    {{request_form}}
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    $(function () {
        $("input[type='submit']").click(function () {
            event.preventDefault;
            var subjectselect = $(".nesty-input").text();
            $("#request_subject").val(subjectselect);
        });

        if (!isLoggedIn()) {
            $("#request_custom_fields_360019751459").value("{{user.name}}");
        }
    });




    
</script>