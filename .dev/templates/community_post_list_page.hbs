                        {{#each sorters}}
                        {{#is name 'Votes'}}
                        {{else}}
                        <option value="{{url}}" {{#if selected}} selected {{/if}}>
                            {{#is name 'Newest post'}}
                            Newest questions
                            {{else}}
                            {{#is name 'Recent activity'}}
                            Latest activity
                            {{else}}
                            {{#is name 'Comments'}}
                            Most replies
                            {{else}}
                            {{name}}
                            {{/is}}
                            {{/is}}
                            {{/is}}
